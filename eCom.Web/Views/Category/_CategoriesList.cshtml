@model eCom.Web.ViewModels.CategoriesViewModel

<table>
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>
				Description
			</th>
			<th>
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model.Categories)
		{
			<tr>
				<td>
					@category.Name
				</td>
				<td>
					@category.Description
				</td>
				<td>
					<button class="editBtn" data-id="@category.ID" type="button">Edit</button>
					<button class="deleteBtn" data-id="@category.ID" type="button">Delete</button>
				</td>
			</tr>
		}
	</tbody>
</table>